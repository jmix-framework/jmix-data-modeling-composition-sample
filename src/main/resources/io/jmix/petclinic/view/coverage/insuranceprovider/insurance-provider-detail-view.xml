<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://insuranceProviderDetailView.title"
      focusComponent="form">
    <data>
        <instance id="insuranceProviderDc"
                  class="io.jmix.petclinic.entity.coverage.InsuranceProvider">
            <fetchPlan extends="_base"/>
            <loader id="insuranceProviderDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="insuranceProviderDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="streetField" property="street"/>
            <textField id="houseNumberField" property="houseNumber"/>
            <textField id="postalCodeField" property="postalCode"/>
            <textField id="cityField" property="city"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
